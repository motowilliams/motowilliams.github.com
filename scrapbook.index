---
layout: default
title: "Scrapbook"
---
{% paginate pages in site.scraps.by_date.reversed size:5 %}
  {% if pagination.first %}
    {% assign path = '/scrapbook.html' %}
  {% else %}
    {% assign number = pagination.page %}
    {% assign url = '/scrapbook/:number' %}
    {% assign path = ':url.html' %}
  {% endif %}
  
  {% render 'index' with pages:pages url:url path:path title:title description:description %}
{% endpaginate %}